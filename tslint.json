{
  "extends": [
    "tslint:latest",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "cliOptions": {
    "exclude": [".next", "node_modules", "coverage"]
  },
  "rules": {
    "import-name": false,
    "no-submodule-imports": [true, "~"],
    "no-implicit-dependencies": [true, ["~"]]
  }
}
